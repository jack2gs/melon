@{
    ViewData["Title"] = "Write Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Write Post</h4>
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Post.cshtml" />
            <div class="form-group">
                <input type="submit" value="Publish" asp-action="Publish" asp-controller="Post" class="btn btn-primary" />
                <input type="submit" value="Save" class="btn btn-primary" asp-action="Create" asp-controller="Post" />
            </div>
        </form>
    </div>
</div>

@section Styles {
    @{await Html.RenderPartialAsync("_PostStylesPartial");}
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_PostScriptsPartial");}
}
